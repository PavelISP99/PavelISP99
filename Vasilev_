int PravOtvet(int answer, int PravOtvet, int points) {
	if (PravOtvet == answer)
	{
		clear;
		cout << "[+]Красава!\n";
		Sleep(1500);
		clear;
		return ++points;
	}
	else {
		clear;
		cout << "[+]Мимо мимо!\n";
		Sleep(1500);
		clear;
		if (points <= 0) {
			return points;
		}
		return --points;

	}
}


