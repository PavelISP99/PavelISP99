		cout << "\t\tУровень сложности:" << "Для Мужчин" << endl;

	}
	else {
		cout << "\t\tУровень сложности:" << endl;
	}
	cout << "[1] Начать игру\n";
	cout << "[2] Настройки\n";
	cout << "[3] Правила\n";
	cout << "[0] Выйти\n";
	int menu;
	cin >> menu;

	if (menu == 1 && hard == 1) {
		Game();
	}
	else if (menu == 1 && hard == 2) {

		Game2();

	}
	else if (menu == 2) {
		clear;
		cout << "[+]Выберите уровень сложности\n\n";
		cout << "[1]Для слабаков\n";
		cout << "[2]Для Мужчин\n";
		choise = 0;
		cin >> choise;
		if (choise == 1) {
			hard = 1;
			clear;
			main();
		}
		else if (choise == 2) {
			hard = 2;
			clear;
			main();
		}
	}
	if (menu == 3) {
		regulations();
	}
}
